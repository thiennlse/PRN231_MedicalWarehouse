@* Enhanced UI Styles - Include this in specific pages that need improved UI *@

<style>
    /* Color Variables */
    :root {
        --primary-color: #2c3e50;
        --secondary-color: #3498db;
        --accent-color: #e74c3c;
        --success-color: #2ecc71;
        --warning-color: #f39c12;
        --danger-color: #e74c3c;
        --light-gray: #f8f9fa;
        --medium-gray: #e9ecef;
        --dark-gray: #6c757d;
        --border-radius: 0.5rem;
        --box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        --transition: all 0.3s ease;
    }

    /* Form Controls */
    .enhanced-form .form-control,
    .enhanced-form .form-select {
        border-radius: var(--border-radius);
        padding: 0.75rem 1rem;
        border: 1px solid var(--medium-gray);
        transition: var(--transition);
    }

    .enhanced-form .form-control:focus,
    .enhanced-form .form-select:focus {
        border-color: var(--secondary-color);
        box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
    }

    .enhanced-form .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
        color: var(--primary-color);
    }

    /* Cards */
    .enhanced-card {
        border: none;
        border-radius: var(--border-radius);
        box-shadow: var(--box-shadow);
        transition: var(--transition);
        overflow: hidden;
    }

    .enhanced-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.2);
    }

    .enhanced-card .card-header {
        background-color: white;
        border-bottom: 2px solid var(--medium-gray);
        padding: 1.5rem;
    }

    .enhanced-card .card-body {
        padding: 1.5rem;
    }

    .enhanced-card .card-title {
        color: var(--primary-color);
        font-weight: 600;
        margin-bottom: 0;
    }

    /* Buttons */
    .btn-enhanced {
        border-radius: var(--border-radius);
        padding: 0.75rem 1.5rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .btn-enhanced i {
        font-size: 1rem;
    }

    .btn-enhanced-primary {
        background-color: var(--secondary-color);
        border-color: var(--secondary-color);
        color: white;
    }

    .btn-enhanced-primary:hover {
        background-color: #2980b9;
        border-color: #2980b9;
        transform: translateY(-2px);
    }

    .btn-enhanced-secondary {
        background-color: white;
        border: 1px solid var(--medium-gray);
        color: var(--primary-color);
    }

    .btn-enhanced-secondary:hover {
        background-color: var(--light-gray);
        transform: translateY(-2px);
    }

    .btn-enhanced-success {
        background-color: var(--success-color);
        border-color: var(--success-color);
        color: white;
    }

    .btn-enhanced-success:hover {
        background-color: #27ae60;
        border-color: #27ae60;
        transform: translateY(-2px);
    }

    .btn-enhanced-danger {
        background-color: var(--danger-color);
        border-color: var(--danger-color);
        color: white;
    }

    .btn-enhanced-danger:hover {
        background-color: #c0392b;
        border-color: #c0392b;
        transform: translateY(-2px);
    }

    /* Order Detail Items */
    .order-detail-item {
        border: 1px solid var(--medium-gray);
        border-radius: var(--border-radius);
        padding: 1.5rem;
        margin-bottom: 1rem;
        transition: var(--transition);
        background-color: white;
    }

    .order-detail-item:hover {
        box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
    }

    /* Image previews */
    .image-preview-container {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        margin-top: 1rem;
    }

    .image-preview-item {
        position: relative;
        border-radius: var(--border-radius);
        overflow: hidden;
        box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);
        transition: var(--transition);
    }

    .image-preview-item:hover {
        transform: scale(1.05);
    }

    .image-preview-item img {
        width: 100px;
        height: 100px;
        object-fit: cover;
    }

    .image-preview-item .delete-btn {
        position: absolute;
        top: 0.25rem;
        right: 0.25rem;
        background-color: rgba(231, 76, 60, 0.8);
        color: white;
        border: none;
        border-radius: 50%;
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: var(--transition);
    }

    .image-preview-item:hover .delete-btn {
        opacity: 1;
    }

    /* Animations */
    .fade-in {
        animation: fadeIn 0.5s ease;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* Status badges */
    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .status-ordered {
        background-color: rgba(52, 152, 219, 0.2);
        color: #2980b9;
    }

    .status-processed {
        background-color: rgba(46, 204, 113, 0.2);
        color: #27ae60;
    }

    .status-cancelled {
        background-color: rgba(231, 76, 60, 0.2);
        color: #c0392b;
    }

    /* Section separators */
    .section-separator {
        display: flex;
        align-items: center;
        margin: 2rem 0;
    }

    .section-separator::before,
    .section-separator::after {
        content: "";
        flex: 1;
        border-bottom: 1px solid var(--medium-gray);
    }

    .section-separator h3 {
        padding: 0 1rem;
        margin-bottom: 0;
        color: var(--dark-gray);
        font-size: 1.25rem;
    }

    /* Select2 enhancements */
    .select2-container--bootstrap4 .select2-selection--single {
        height: calc(1.5em + 1.5rem + 2px) !important;
        padding: 0.75rem 1rem;
    }

    .select2-container--bootstrap4 .select2-selection--single .select2-selection__rendered {
        line-height: 1.5;
        padding-left: 0;
    }

    .select2-container--bootstrap4 .select2-selection--single .select2-selection__arrow {
        height: calc(1.5em + 1.5rem + 2px);
    }
</style> 