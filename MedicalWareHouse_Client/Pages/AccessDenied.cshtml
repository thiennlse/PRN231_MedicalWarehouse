@page
@model MedicalWareHouse_Client.Pages.AccessDeniedModel
@{
    ViewData["Title"] = "Từ chối truy cập";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-danger text-white">
                    <h3 class="text-center font-weight-bold mb-0">Từ chối truy cập</h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <div class="text-center">
                        <h5>Bạn không có quyền truy cập trang này</h5>
                        <p class="text-muted">Vui lòng liên hệ quản trị viên hoặc đăng nhập với tài khoản có quyền truy cập phù hợp</p>
                    </div>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="d-flex justify-content-center">
                        <a asp-page="/Index" class="btn btn-primary mx-2">Về trang chủ</a>
                        <a asp-page="/Login" class="btn btn-secondary mx-2">Đăng nhập lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 