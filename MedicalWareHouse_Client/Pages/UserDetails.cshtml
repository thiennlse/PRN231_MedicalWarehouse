@page
@model MedicalWareHouse_Client.Pages.UserDetailsModel

@{
    ViewData["Title"] = "Chi Tiết Người Dùng";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-gradient-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="h3 mb-0 font-weight-bold">Chi Tiết Người Dùng</h1>
                        <a asp-page="./MedicalPage/Index" class="btn btn-light">
                            <i class="fas fa-arrow-left me-2"></i> Quay Lại
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-body">
                                    <label class="text-muted small text-uppercase">Username</label>
                                    <h2 class="font-weight-bold text-primary mb-4">@Model.UserInfo?.Name</h2>

                                    <div class="row g-4">
                                        <div class="col-md-6">
                                            <div class="detail-item">
                                                <label class="text-muted small text-uppercase">Email</label>
                                                <h5>@Model.UserInfo?.Email</h5>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="detail-item">
                                                <label class="text-muted small text-uppercase">Vai Trò</label>
                                                <h5>@Model.UserInfo?.Role</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-light py-3">
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(45deg, #4e73df, #3154c5);
        }

        .detail-item {
            margin-bottom: 1.5rem;
        }

            .detail-item label {
                display: block;
                margin-bottom: 0.5rem;
                font-size: 0.875rem;
                font-weight: 600;
                letter-spacing: 0.5px;
            }

            .detail-item h5 {
                margin: 0;
            }

        .badge {
            font-size: 0.85rem;
            font-weight: 500;
            padding: 0.5em 1em;
            border-radius: 30px;
        }

        .fw-semi-bold {
            font-weight: 600;
        }
    </style>
}
